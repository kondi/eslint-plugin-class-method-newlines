{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
